<!DOCTYPE html>
<html lang="fr">
<head>
	<meta charset="UTF-8">
	<title>{% block title %}Welcome!{% endblock %}</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/css/select2.min.css"/>
	{% block stylesheets %}{% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
	<a class="navbar-brand" href="{{ path('home') }}">Filerama</a>
	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
	        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	</button>
	<div class="collapse navbar-collapse" id="navbarNav">
		<ul class="navbar-nav mr-auto">
			<li class="nav-item">
				<a class="nav-link {% if current_menu is defined and current_menu == 'properties' %}active{% endif %}"
				   href="{{ path('property.index') }}">Acheter</a>
			</li>
			{% if app.user %}
				<li class="nav-item">
					<a class="nav-link {% if current_menu is defined and current_menu == 'edit' %}active{% endif %}"
					   href="{{ path('admin.property.index') }}">Editer Biens</a>
				</li>
				<li class="nav-item">
					<a class="nav-link {% if current_menu is defined and current_menu == 'edit' %}active{% endif %}"
					   href="{{ path('admin.option.index') }}">Editer Options</a>
				</li>
			{% endif %}
		</ul>
		<ul class="navbar-nav">
			{% if app.user == false %}
				<li class="nav-item">
					<a class="nav-link {% if current_menu is defined and current_menu == 'login' %}active{% endif %}"
					   href="{{ path('login') }}">Connexion</a>
				</li>
				<li class="nav-item">
					<a class="nav-link {% if current_menu is defined and current_menu == 'register' %}active{% endif %}"
					   href="{{ path('register.index') }}">Inscription</a>
				</li>
			{% endif %}
			{% if app.user %}
				<li class="nav-item">
					<a class="nav-link" href="{{ path('logout') }}">DÃ©connexion</a>
				</li>
			{% endif %}
		</ul>
	</div>
</nav>
{% block body %}
{% endblock %}
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/js/select2.min.js"></script>
<script>
	$( 'select' ).select2();
</script>
{% block javascripts %}{% endblock %}
</body>
</html>
