{% extends 'base.html.twig' %}
{% block title 'Inscription' %}

{% block body %}
	<div class="container text-center my-4">
		<div class="row my-4">
			<div class="col-md-6 offset-md-3 my-4">
				<div class="form-control py-4">
					{{ form_start(form) }}
					<div class="form-group">{{ form_row(form.email) }}</div>
					<div class="form-group">{{ form_row(form.username) }}</div>
					<div class="form-group">{{ form_row(form.plainPassword) }}</div>
					{{ form_widget(form) }}
					<button class="btn btn-primary">{{ button | default('Enregistrer') }}</button>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}